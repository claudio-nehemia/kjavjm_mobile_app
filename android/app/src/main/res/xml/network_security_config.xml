<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Configuration for production API domain -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">demo-kjavmj.prosesin.id</domain>
        <trust-anchors>
            <certificates src="system"/>
            <certificates src="user"/>
        </trust-anchors>
    </domain-config>
    
    <!-- Configuration for development/testing domains -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">127.0.0.1</domain>
        <domain includeSubdomains="true">10.0.2.2</domain>
        <domain includeSubdomains="true">192.168.1.100</domain>
        <domain includeSubdomains="true">192.168.22.146</domain>
        <domain includeSubdomains="true">192.168.50.48</domain>
    </domain-config>
    
    <!-- Base configuration with system trust anchors -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system"/>
            <certificates src="user"/>
        </trust-anchors>
    </base-config>
</network-security-config>